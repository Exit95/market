    }

    .treuhand-visual {
        position: sticky;
        top: 100px;
    }
    .visual-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-xl);
        padding: var(--space-6);
        display: flex;
        flex-direction: column;
