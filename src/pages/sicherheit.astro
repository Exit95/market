<style>
    .sec-hero {
        position: relative;
        overflow: hidden;
    }
    .sec-hero-bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(
            ellipse 80% 60% at 50% -10%,
            rgba(16, 185, 129, 0.1) 0%,
            transparent 70%
        );
    }

    .pillars-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: var(--space-5);
    }
    .pillar-card {
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-xl);
        padding: var(--space-6);
        transition: all var(--transition);
    }
    .pillar-card:hover {
        border-color: var(--color-border-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow);
    }
    .pillar-icon {
        width: 64px;
        height: 64px;
        border-radius: var(--radius-xl);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--space-4);
    }
    .pillar-card h3 {
        font-size: var(--text-base);
        font-weight: 700;
        margin-bottom: var(--space-3);
    }
    .pillar-card p {
        font-size: var(--text-sm);
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: var(--space-4);
    }
    .pillar-link {
        font-size: var(--text-sm);
        color: var(--color-primary);
        font-weight: 600;
    }
    .pillar-link:hover {
        text-decoration: underline;
    }

    .detail-section {
        padding: var(--space-20) 0;
    }
    .detail-section-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-16);
        align-items: start;
    }

    .flow-steps {
        display: flex;
        flex-direction: column;
        gap: var(--space-5);
    }
    .flow-step {
        display: flex;
        gap: var(--space-4);
        align-items: flex-start;
    }
    .flow-num {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, var(--color-success), #34d399);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--text-sm);
        font-weight: 800;
        color: white;
        flex-shrink: 0;
    }
    .flow-step strong {
        display: block;
        font-weight: 700;
        margin-bottom: 4px;
    }
    .flow-step p {
        font-size: var(--text-sm);
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .info-box {
        display: flex;
        gap: var(--space-3);
        padding: var(--space-4);
        border-radius: var(--radius-lg);
        font-size: var(--text-sm);
        line-height: 1.6;
    }
    .info-box.success {
        background: rgba(16, 185, 129, 0.06);
        border: 1px solid rgba(16, 185, 129, 0.2);
        color: var(--color-success);
    }
    .info-box.success svg {
        color: var(--color-success);
        flex-shrink: 0;
        margin-top: 2px;
    }
    .info-box.primary {
