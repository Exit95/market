                            </a>
                        </div>
                    </div>
                </div>

                <!-- Right: Listings + Reviews -->
                <div class="profile-right">
                    <!-- My Listings -->
                    <div class="card">
                        <div
                            style="display:flex; justify-content:space-between; align-items:center; margin-bottom:var(--space-5);"
                        >
                            <h3 class="card-section-title" style="margin:0;">
                                Meine Anzeigen
                            </h3>
                            <a
                                href="/inserat-erstellen"
                                class="btn btn-primary btn-sm">+ Neu</a
                            >
                        </div>
                        <div class="my-listings-list">
                            {
                                myListings.map((l) => (
                                    <div class="my-listing-item">
                                        <img
                                            src={l.image}
                                            alt={l.title}
                                            class="my-listing-img"
                                        />
                                        <div class="my-listing-info">
                                            <div class="my-listing-title">
                                                {l.title}
                                            </div>
                                            <div class="my-listing-price">
                                                {l.price.toLocaleString(
                                                    "de-DE",
                                                )}{" "}
