</BaseLayout>

<style>
    .profile-main {
        padding: 0 0 var(--space-16);
    }
    .profile-banner {
        background: var(--color-surface);
        border-bottom: 1px solid var(--color-border);
        position: relative;
        overflow: hidden;
    }
    .banner-bg {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(6, 182, 212, 0.08) 0%,
            rgba(59, 130, 246, 0.05) 100%
        );
    }
    .profile-info {
        position: relative;
        display: flex;
        align-items: center;
        gap: var(--space-6);
        padding: var(--space-8) var(--space-12);
        flex-wrap: wrap;
        max-width: 1280px;
        margin: 0 auto;
    }
    .profile-avatar {
        width: 90px;
        height: 90px;
        background: linear-gradient(
            135deg,
            var(--color-primary),
            var(--color-accent)
        );
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 800;
        color: #0b1120;
        flex-shrink: 0;
        border: 4px solid var(--color-surface);
        box-shadow: var(--shadow);
    }
    .profile-details {
        flex: 1;
    }
    .profile-name-row {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        flex-wrap: wrap;
        margin-bottom: var(--space-2);
    }
    .profile-name {
        font-size: var(--text-2xl);
        font-weight: 800;
        letter-spacing: -0.02em;
    }
    .profile-since {
        font-size: var(--text-sm);
        color: var(--color-text-muted);
        margin-bottom: var(--space-4);
    }
    .profile-stats-row {
        display: flex;
        gap: var(--space-6);
        flex-wrap: wrap;
    }
    .pstat {
        display: flex;
        flex-direction: column;
    }
    .pstat-val {
        font-size: var(--text-xl);
        font-weight: 800;
    }
    .pstat-label {
        font-size: var(--text-xs);
        color: var(--color-text-muted);
    }
    .profile-actions {
        display: flex;
        gap: var(--space-3);
        flex-direction: column;
    }

    /* Profile Grid */
    .profile-grid {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: var(--space-8);
        margin-top: var(--space-8);
    }
    .card-section-title {
        font-size: var(--text-sm);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--color-text-muted);
        margin-bottom: var(--space-4);
    }

    /* Verification */
    .verif-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
    }
    .verif-item {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        padding: var(--space-3);
        border-radius: var(--radius);
        background: var(--color-surface-2);
    }
    .verif-item.done {
        background: rgba(16, 185, 129, 0.04);
    }
    .verif-item.pending {
        background: rgba(245, 158, 11, 0.04);
    }
    .verif-icon {
        width: 32px;
        height: 32px;
        border-radius: var(--radius);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    .verif-icon.success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--color-success);
    }
    .verif-icon.warning {
        background: rgba(245, 158, 11, 0.15);
        color: var(--color-warning);
    }
    .verif-name {
        font-size: var(--text-sm);
        font-weight: 600;
    }
    .verif-sub {
        font-size: var(--text-xs);
        color: var(--color-text-muted);
    }
    .verif-item > :last-child {
        margin-left: auto;
        flex-shrink: 0;
    }
    .trust-score {
        margin-top: var(--space-5);
        padding-top: var(--space-4);
        border-top: 1px solid var(--color-border);
    }
    .trust-score-label {
        display: flex;
        justify-content: space-between;
        font-size: var(--text-sm);
        font-weight: 600;
        margin-bottom: var(--space-2);
    }
    .trust-score-bar-wrap {
        background: var(--color-surface-2);
        border-radius: var(--radius-full);
        height: 8px;
        overflow: hidden;
    }
    .trust-score-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--color-success), #34d399);
        border-radius: var(--radius-full);
    }

    /* Quick Links */
    .quick-links {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }
    .quick-link {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        padding: var(--space-3) var(--space-3);
        border-radius: var(--radius);
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--color-text-muted);
        transition: all var(--transition);
    }
    .quick-link:hover {
        background: var(--color-surface-2);
        color: var(--color-text);
    }

    /* My Listings */
    .my-listings-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
    }
    .my-listing-item {
        display: flex;
        gap: var(--space-3);
        align-items: center;
        padding: var(--space-3);
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
        transition: all var(--transition);
    }
    .my-listing-item:hover {
        border-color: var(--color-border-hover);
        background: var(--color-surface-2);
    }
    .my-listing-img {
        width: 70px;
        height: 55px;
        object-fit: cover;
        border-radius: var(--radius);
        flex-shrink: 0;
    }
    .my-listing-info {
        flex: 1;
        min-width: 0;
    }
    .my-listing-title {
        font-size: var(--text-sm);
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .my-listing-price {
        font-size: var(--text-base);
        font-weight: 800;
        color: var(--color-primary);
    }
    .my-listing-meta {
        font-size: var(--text-xs);
        color: var(--color-text-muted);
    }
    .my-listing-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: var(--space-2);
        flex-shrink: 0;
    }

    /* Reviews */
    .review-summary {
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }
    .reviews-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }
    .review-item {
        padding: var(--space-4);
        background: var(--color-surface-2);
        border-radius: var(--radius-lg);
    }
    .review-header {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        margin-bottom: var(--space-3);
    }
    .reviewer-avatar {
        width: 36px;
        height: 36px;
        background: var(--color-surface-3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--text-sm);
        font-weight: 600;
        flex-shrink: 0;
    }
    .reviewer-name {
        font-size: var(--text-sm);
        font-weight: 600;
    }
    .review-date {
        margin-left: auto;
        font-size: var(--text-xs);
        color: var(--color-text-faint);
    }
    .review-text {
        font-size: var(--text-sm);
        color: var(--color-text-muted);
        line-height: 1.7;
        margin-bottom: var(--space-2);
    }

    @media (max-width: 1024px) {
        .profile-grid {
            grid-template-columns: 1fr;
        }
        .profile-info {
            padding: var(--space-6);
        }
    }
    @media (max-width: 600px) {
        .profile-info {
            flex-direction: column;
            text-align: center;
        }
        .profile-stats-row {
            justify-content: center;
        }
        .profile-name-row {
            justify-content: center;
        }
    }
</style>
